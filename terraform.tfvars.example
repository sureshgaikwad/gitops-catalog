# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update the values

##############################################################
# Required Variables
##############################################################
cluster_name      = "my-rosa-cluster"
openshift_version = "4.19.3"
aws_region        = "us-east-1"



# AWS Account Configuration (optional - will auto-detect if not provided)
# aws_account_id = "123456789012"           # AWS account where cluster will be deployed
# aws_billing_account_id = "123456789012"   # AWS account for billing (defaults to aws_account_id)


##############################################################
# VPC Configuration
##############################################################
create_vpc = true
vpc_cidr   = "10.0.0.0/16"

# If using existing VPC, set create_vpc = false and provide:
# IMPORTANT: For ROSA HCP clusters, you need both public and private subnets
# aws_subnet_ids         = ["subnet-public1", "subnet-public2", "subnet-public3", "subnet-private1", "subnet-private2", "subnet-private3"]
# aws_availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]
# machine_cidr          = "10.0.0.0/16"
# replicas              = 3

##############################################################
# Admin User Configuration
##############################################################
admin_username = "cluster-admin"
# admin_password = "YourSecurePassword123!" # Optional, random password will be generated if not provided

##############################################################
# Cluster Configuration
##############################################################
private_cluster      = false
compute_machine_type = "m5.xlarge"

##############################################################
# Optional Network Configuration
##############################################################
# service_cidr = "172.30.0.0/16"
# pod_cidr     = "10.128.0.0/14"
# host_prefix  = 23

##############################################################
# Machine Pools Configuration
##############################################################
create_additional_machine_pools = false
enable_autoscaling              = false
autoscaling_min_replicas        = 2
autoscaling_max_replicas        = 10

# Example additional machine pools configuration:
